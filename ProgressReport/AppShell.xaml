<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProgressReport.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProgressReport"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Data Entry">
            <ShellContent Title="Data Entry"
                          ContentTemplate="{DataTemplate local:DataEntryPage}">
                
            </ShellContent>
        </Tab>
        <Tab Title="Data View">
            <ShellContent Title="Data View"
                          ContentTemplate="{DataTemplate local:DataViewPage}">
                
            </ShellContent>
        </Tab>
    </TabBar>

</Shell>
